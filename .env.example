# LinkedIn Easy MCP Server Configuration v2.0.0
# Copy this file to .env and fill in your LinkedIn access token

# Required: Your LinkedIn access token with OpenID Connect scopes
# Scopes needed: openid, profile, email, w_member_social (for posting)
# Get your token from: https://developer.linkedin.com/
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# Optional: Debug mode (true/false)
DEBUG=false

# Optional: API request timeout in milliseconds (default: 30000)
API_TIMEOUT=30000

# Note: PORT is not used in MCP server mode (stdio transport)
# But kept for compatibility with test scripts
PORT=3000